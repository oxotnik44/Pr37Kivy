<MainWidget>:
    orientation: 'vertical'
    spacing: 5

    Label:        
        id: lbl_question
        text: 'Как зовут актера?'
        

    AsyncImage:
        id: img_question

    AsyncImage:
        id: img_result
        opacity: 0

    Label:        
        id: lbl_pass
        text: ''
        
        
    
    GridLayout:
        id: layout_btns        
        rows: 2
        size_hint_y: 0.5

        Button:
            id: btn_answer1
            on_press: root.btn_pressed(1)
            
        
        Button:
            id: btn_answer2
            on_press: root.btn_pressed(2)
           
        
        Button:
            id: btn_answer3
            on_press: root.btn_pressed(3)
            
        
        Button:
            id: btn_answer4
            on_press: root.btn_pressed(4)
        